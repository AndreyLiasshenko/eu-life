<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
    <persistence-unit name="User">
        <class>org.EuLife.dao.Entities.User</class>
        <class>org.EuLife.dao.Entities.Question</class>
        <class>org.EuLife.dao.Entities.Image</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/users"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="Andrey"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
        </properties>

    </persistence-unit>
</persistence>
